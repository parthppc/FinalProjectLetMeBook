<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/logout"
        android:text="Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMyAppointments" />

    <Button
        android:id="@+id/buttonSpecialists"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/specialist"
        android:text="Specialists"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilebtn" />

    <Button
        android:id="@+id/buttonMyAppointments"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="28dp"
        android:drawableLeft="@drawable/appointment"
        android:text="My Appointments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSpecialists" />

    <Button
        android:id="@+id/profilebtn"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/profile2"
        android:text="Profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="413dp"
        android:layout_height="228dp"
        android:src="@drawable/doctornurse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>