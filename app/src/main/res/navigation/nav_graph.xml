<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="project.st991591950.dhruvparthtapasvi.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="project.st991591950.dhruvparthtapasvi.HomeFragment"
        android:label="fragment_home"

        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_specialistFragment"
            app:destination="@id/specialistFragment" />
        <action
            android:id="@+id/action_homeFragment_to_myAppointmentsFragment"
            app:destination="@id/myAppointmentsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bookAppointmentFragment"
            app:destination="@id/bookAppointmentFragment" />

    </fragment>
    <fragment
        android:id="@+id/specialistFragment"
        android:name="project.st991591950.dhruvparthtapasvi.specialist.SpecialistFragment"
        android:label="fragment_specialist"
        tools:layout="@layout/fragment_specialist" >
        <action
            android:id="@+id/action_specialistFragment_to_bookAppointmentFragment"
            app:destination="@id/bookAppointmentFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminFragment"
        android:name="project.st991591950.dhruvparthtapasvi.AdminFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" >
        <action
            android:id="@+id/action_adminFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="project.st991591950.dhruvparthtapasvi.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/myAppointmentsFragment"
        android:name="project.st991591950.dhruvparthtapasvi.myAppointments.MyAppointmentsFragment"
        android:label="fragment_my_appointments"
        tools:layout="@layout/fragment_my_appointments" >
        <action
            android:id="@+id/action_myAppointmentsFragment_self2"
            app:destination="@id/myAppointmentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookAppointmentFragment"
        android:name="project.st991591950.dhruvparthtapasvi.bookappointment.BookAppointmentFragment"
        android:label="fragment_book_appointment"
        tools:layout="@layout/fragment_book_appointment" >
        <action
            android:id="@+id/action_bookAppointmentFragment_to_specialistFragment"
            app:destination="@id/specialistFragment" />
    </fragment>

</navigation>